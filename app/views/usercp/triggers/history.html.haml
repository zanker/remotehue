%table.table.table-hover.table-striped.table-bordered
  %thead
    %tr
      %th= t(".source")
      %th.center= t(".results")
      %th= t(".created_at")

  %tbody
    - if @history.empty?
      %tr
        %td{:colspan => 3}= t(".not_triggered_yet", :name => @trigger.name)

    - else
      - @history.each do |row|
        %tr
          %td= t(".from_types.#{row.from}")
          %td.center
            = t(".result_types.#{row.results}")
            %a.tt{"title" => t(".result_types_desc.#{row.results}"), :href => "#"} [?]
          %td= current_user.formatted_time(row.created_at)

:javascript
  $("#trigger-history .tt").tooltip();