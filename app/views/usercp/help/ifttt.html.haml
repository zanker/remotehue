.row
  .span12
    %h3.header= t(".ifttt_setup")

.alert.alert-info.skip-help
  .close x
  %p
    %strong= t(".skip_intro")
  %p
    %strong= t(".enter_id", :name => @trigger.name)
    %input.input-xxlarge{:type => :text, :value => @trigger.mail_tag}

.row
  .span2.step-guide.well.well-small
    %ul.nav.nav-list
      - (1..6).each do |i|
        %li{"data-step" => i}
          %a{:href => "#"}
            #{i}.
            = t(".titles.#{i}")

  .span10.steps.well.well-small
    #step1
      %h3
        = t(".step", :number => 1)
        -
        = t(".titles.1")
      %p= linkify_text(t(".step_1.create_ifttt_account"), [:blank, "https://ifttt.com/login"], [:blank, "https://ifttt.com/join"])

    #step2.hidden
      %h3
        = t(".step", :number => 2)
        \-
        = t(".titles.2")

      %p= linkify_text(t(".step_2.active"), [:blank, "https://ifttt.com/channels/email/activate"])
      %p= t(".step_2.enter")

      = image_tag("help/ifttt/11.png", :class => "img-polaroid")

      %p.push-up!= t(".step_2.activate", :pin => content_tag(:span, CONFIG[:ifttt_pin], :class => "text-success"))

      = image_tag("help/ifttt/12.png", :class => "img-polaroid")

      %p.push-up
        %strong= t(".step_2.done")

    #step3.hidden
      %h3
        = t(".step", :number => 3)
        \-
        = t(".titles.3")

      %p= linkify_text(t(".step_3.select_create"), [:blank, "https://ifttt.com/myrecipes/personal/new"])
      = image_tag("help/ifttt/1.png", :class => "img-polaroid")

      %p.push-up= t(".step_3.select_this")
      = image_tag("help/ifttt/2.png", :class => "img-polaroid")

      %p.push-up= t(".step_3.recipes")
      %p= t(".step_3.future")
      %p= t(".step_3.select_weather")
      = image_tag("help/ifttt/3.png", :class => "img-polaroid")

      %p.push-up
        %strong= t(".step_3.done")

    #step4.hidden
      %h3
        = t(".step", :number => 4)
        \-
        = t(".titles.4")

      %p= t(".step_4.event")
      %p= t(".step_4.wind")
      = image_tag("help/ifttt/4.png", :class => "img-polaroid")

      %p.push-up= t(".step_4.speed")
      = image_tag("help/ifttt/5.png", :class => "img-polaroid")

      %p.push-up
        %strong= t(".step_4.done")

    #step5.hidden
      %h3
        = t(".step", :number => 5)
        \-
        = t(".titles.5")

      %p= t(".step_5.push")
      = image_tag("help/ifttt/6.png", :class => "img-polaroid")

      %p.push-up= t(".step_5.select")
      %p= t(".step_5.select_always")
      = image_tag("help/ifttt/7.png", :class => "img-polaroid")

      %p.push-up= t(".step_5.action")
      = image_tag("help/ifttt/8.png", :class => "img-polaroid")

      %p.push-up= t(".step_5.subject")
      %p= t(".step_5.trigger", :name => @trigger.name)
      %label= t(".remotehue_id")
      %input.input-xxlarge{:type => :text, :value => @trigger.mail_tag}
      = image_tag("help/ifttt/9.png", :class => "img-polaroid")

      %p.push-up= t(".step_5.select_action")
      = image_tag("help/ifttt/10.png", :class => "img-polaroid")
      %p= t(".step_5.create_recipe")

      %p.push-up
        %strong= t(".step_5.wrap_up")

    #step6.hidden
      %h3
        = t(".step", :number => 6)
        \-
        = t(".titles.6")

      %p= linkify_text(t(".step_6.support"), [:email, CONFIG[:contact][:email]])
      %p= linkify_text(t(".step_6.ifttt"), [:blank, "https://ifttt.com/wemo_motion"], [:blank, "https://ifttt.com/sms"])
      %p.push-up= t(".step_6.remotehue")
      %p.push-up= t(".step_6.future")

    .push-bottom
    %a.btn.btn.btn-large#previous-step{:href => "#"}= t(".back")
    %a.btn.btn-success.pull-right.btn-large#next-step{:href => "#", "data-step-start" => 1}= t(".next")